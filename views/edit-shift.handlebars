<div class="row">
<div class="col s12">
<div class="glassy-bg">
 <form method="post" action="/departments/shift/{{shift._id}}">

   <div class="form-group">
    <label>Shift Name</label>
    <input type="text" class="form-control" value = "{{shift.shift_name}}" name="shift_name">
  </div>
  <div class="form-group">
    <label>Time start</label>   
    <input  class="timepicker" type="time" name="shift_time_start" value = "{{shift.shift_time_start}}">
  </div>
   <div class="form-group">
    <label>Time end</label>   
    <input  class="timepicker" type="time" name="shift_time_end" value = "{{shift.shift_time_end}}">
  </div>
   <div class="form-group">
      <label class ="onoffbtn">
        <input class="with-gap" name="shift_active" type="radio"{{#if shift.shift_active}} checked ="checked"{{/if}}/>
        <span>Active</span>
      </label>
  </div>
  <button type="submit" class="btn btn-default">Update</button>
</form>
</div>
</div>
</div>

