<h2 class="page-header">Add Activicty</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<div class="row">
<div class="col s12">
<div class ="rolesection">  
<form method="POST" action="/activities/add">
   <div class="form-group">
    <label>Activicty Name</label>
    <input type="text" class="form-control" placeholder="Activicty Name" name="activicty_name">
  </div>
   <div class="form-group">
    <label>Sub Activicty</label>
    <select name ="activictysub" id= "activictysub">
         <option value="">Choose your Sub activicty</option>         
         <option value="0">Main</option>    
         {{#each activicty}}     
         <option value="{{ _id }}">{{ activicty_name }}</option>    {{/each}}
   </select>
  </div>
   <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
</div>
</div>

